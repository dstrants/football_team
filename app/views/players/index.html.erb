<p id="notice"><%= notice %></p>

<h1>Players</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Team</th>
      <th>Parent</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
        <td><%= player.team_id %></td>
        <td><%= player.parent_id %></td>
        <td><%= link_to 'Show', team_player_path(player.team, player) %></td>
        <td><%= link_to 'Edit', edit_team_player_path(player.team, player) %></td>
        <td><%= link_to 'Destroy', team_player_path(player.team, player), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Player', new_team_player_path %>
