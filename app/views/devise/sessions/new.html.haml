.col-md-8
    .card-group
        .card.p-4
            .card-body
                %h1 Login
                %p.text-muted Sign In to your account
                = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
                    .input-group.mb-3
                        .input-group-prepend
                            %span.input-group-text
                                %i.fas.fa-user
                        = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "username", class: "form-control"
                    .input-group.mb-4
                        .input-group-prepend
                            %span.input-group-text
                                %i.fas.fa-key
                        = f.password_field :password, autocomplete: "current-password", placeholder: "password", class: 'form-control'
                    .row
                        .col-5.offset-8
                            = f.check_box :remember_me
                            = f.label "Remember Me"
                    .row
                        .col-6
                            = f.submit "Log in", class: 'btn btn-primary px-4'
                        .col-6.text-right
                            %button.btn.btn-link.px-0{:type => "button"} Forgot password?
        .card.text-white.bg-primary.py-5.d-md-down-none{:style => "width:44%"}
            .card-body.text-center
                %div
                    %h2 Sign up
                    %p Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
                    %button.btn.btn-lg.btn-outline-light.mt-3{:type => "button"} Register Now!
