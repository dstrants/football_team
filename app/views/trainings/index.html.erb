<p id="notice"><%= notice %></p>

<h1>Trainings</h1>

<table>
  <thead>
    <tr>
      <th>Team</th>
      <th>Scheduled at</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trainings.each do |training| %>
      <tr>
        <td><%= training.team_id %></td>
        <td><%= training.scheduled_at %></td>
        <td><%= training.location %></td>
        <td><%= link_to 'Show', team_training_path(training.team, training) %></td>
        <td><%= link_to 'Edit', edit_team_training_path(training.team, training) %></td>
        <td><%= link_to 'Destroy', team_training_path(training.team, training), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Training', new_team_training_path %>
